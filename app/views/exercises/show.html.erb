<div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Detail of Exercise: <%= @exercise.name %></h1>

  <%= link_to 'Back', exercises_path, 
      class: "inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mb-6" %>
  <hr class="my-6 border-gray-300">

  <div class="space-y-4">
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Name:</h2>
      <p class="text-gray-600 text-base"><%= @exercise.name %></p>
    </div>

    <div>
      <h2 class="text-lg font-semibold text-gray-700">Description:</h2>
      <p class="text-gray-600 text-base"><%= @exercise.description %></p>
    </div>

    <div>
      <h2 class="text-lg font-semibold text-gray-700">Set:</h2>
      <p class="text-gray-600 text-base"><%= @exercise.set %></p>
    </div>

    <div>
      <h2 class="text-lg font-semibold text-gray-700">Repetition:</h2>
      <p class="text-gray-600 text-base"><%= @exercise.repetition %></p>
    </div>
  </div>
</div>
