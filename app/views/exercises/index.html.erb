<h1 class="text-2xl font-bold text-gray-800 mb-6"><%= t('.title') %></h1>

<%= link_to t('.new'), new_exercise_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>

<table class="min-w-full bg-white border border-gray-200 shadow-md mt-6">
  <thead>
    <tr class="bg-gray-200 text-gray-700 uppercase text-sm leading-normal">
      <th class="py-3 px-6 text-left"><%= t('.table.headers.name') %></th>
      <th class="py-3 px-6 text-left"><%= t('.table.headers.description') %></th>
      <th class="py-3 px-6 text-left"><%= t('.table.headers.set') %></th>
      <th class="py-3 px-6 text-left"><%= t('.table.headers.repetition') %></th>
      <th class="py-3 px-6 text-center"><%= t('.table.headers.actions') %></th>
    </tr>
  </thead>
  <tbody class="text-gray-600 text-sm font-light">
    <% @exercises.each do |exercise| %>
      <tr class="border-b border-gray-200 hover:bg-gray-100">
        <td class="py-3 px-6 text-left whitespace-nowrap"><%= exercise.name %></td>
        <td class="py-3 px-6 text-left"><%= exercise.description %></td>
        <td class="py-3 px-6 text-left"><%= exercise.set %></td>
        <td class="py-3 px-6 text-left"><%= exercise.repetition %></td>
        <td class="py-3 px-6 text-center">
          <div class="flex justify-center space-x-2">
            <%= link_to t('common.actions.detail'), exercise_path(exercise), 
                class: "bg-blue-500 text-white px-3 py-2 rounded hover:bg-blue-600" %>
            <%= link_to t('common.actions.edit'), edit_exercise_path(exercise), 
                class: "bg-green-500 text-white px-3 py-2 rounded hover:bg-green-600" %>
            <%= link_to t('common.actions.delete'), exercise_path(exercise), 
                data: { turbo_method: :delete, turbo_confirm: t('common.actions.confirm_delete') }, 
                class: "bg-red-500 text-white px-3 py-2 rounded hover:bg-red-600" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
