<%= form_with model: exercise do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :set %>
    <%= f.text_field :set %>
  </div>

  <div>
    <%= f.label :repetition %>
    <%= f.text_field :repetition %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>