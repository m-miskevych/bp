<%= form_with model: exercise, class: "space-y-6" do |f| %>
  <div class="flex flex-col">
    <%= f.label :name, class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, class: "border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :description, class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description, rows: 4, class: "border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :set, class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :set, class: "border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :repetition, class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :repetition, class: "border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= f.submit "Save Exercise", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
