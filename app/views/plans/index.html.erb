<h1>Plans</h1>

<%= link_to 'New Plan', new_plan_path %>

<% @plans.each do |plan| %>
  <p><%= plan.name %></p>
  <p><%= plan.description %></p>
  <br>
  <%= link_to 'Show', plan_path(plan) %>
  <%= link_to 'Edit', edit_plan_path(plan) %>
  <%= link_to 'Destroy', plan_path(plan), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  <hr>

<% end %>