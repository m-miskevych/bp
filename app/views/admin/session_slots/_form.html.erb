<%= form_with model: [:admin, session_slot], local: true, class: "container mx-auto max-w-lg space-y-6" do |f| %>
  <!-- Name -->
  <div class="flex flex-col">
    <%= f.label :name, t(".name"), class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, required: true, class: "border border-gray-300 rounded-md p-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Location -->
  <div class="flex flex-col">
    <%= f.label :location, t(".location"), class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :location, class: "border border-gray-300 rounded-md p-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Description -->
  <div class="flex flex-col">
    <%= f.label :description, t(".description"), class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description, rows: 3, class: "border border-gray-300 rounded-md p-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Duration -->
  <div class="flex flex-col">
    <%= f.label :duration, t(".duration"), class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.number_field :duration, min: 1, required: true, class: "border border-gray-300 rounded-md p-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Date and Time -->
  <div class="flex flex-col">
    <%= f.label :available_at, t(".date_and_time"), class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.datetime_local_field :available_at, min: Time.current.strftime("%Y-%m-%dT%H:%M"), required: true, class: "border border-gray-300 rounded-md p-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Submit -->
  <div class="flex justify-center">
    <%= f.submit t(".submit"), class: "btn-fancy" %>
  </div>
<% end %>
