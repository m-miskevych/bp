<%= form_with model: [:admin, client], url: admin_users_path, local: true, class: "container mx-auto max-w-lg" do |f| %>
  <div class="flex flex-col">
    <%= f.label :name, t(".name"), class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, required: true, class: "border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :email, t(".email"), class: "text-sm font-medium text-gray-700 mb-2" %>
    <%= f.email_field :email, required: true, class: "border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>


  <div class="flex justify-center">
    <%= f.submit t('.submit'), class: "btn-fancy" %>
  </div>
<% end %>