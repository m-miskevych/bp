<h1 class="text-2xl font-bold mb-4">Clients for <%= @admin.name %></h1>
<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-200">
    <thead class="bg-gray-100">
      <tr>
        <th class="py-2 px-4 border-b text-left text-gray-600">Email</th>
        <th class="py-2 px-4 border-b text-left text-gray-600">Name</th>
        <th class="py-2 px-4 border-b text-left text-gray-600">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4 border-b text-gray-800"><%= client.email %></td>
          <td class="py-2 px-4 border-b text-gray-800"><%= client.name %></td>
          <td class="py-2 px-4 border-b text-gray-800">
            <%= link_to 'Show', admin_user_path(client), class: "text-blue-500 hover:text-blue-700" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
