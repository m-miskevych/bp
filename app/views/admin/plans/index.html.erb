<h1 class="text-2xl font-bold text-gray-800 mb-6"><%= t('.title') %></h1>

<%= link_to t('.new'), new_admin_plan_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mb-6 inline-block" %>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-6">
  <% @plans.each do |plan| %>
    <div class="bg-white border border-gray-200 rounded-lg shadow-md p-4">
      <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= plan.name %></h2>
      <p class="text-gray-600 mb-4"><%= plan.description %></p>
      <div class="flex space-x-2">
        <%= link_to  t('common.actions.detail'), admin_plan_path(plan), 
            class: "bg-blue-500 text-white px-3 py-2 rounded hover:bg-blue-600" %>
        <%= link_to t('common.actions.edit'), edit_admin_plan_path(plan), 
            class: "bg-green-500 text-white px-3 py-2 rounded hover:bg-green-600" %>
        <%= link_to t('common.actions.delete'), admin_plan_path(plan), 
            data: { turbo_method: :delete, turbo_confirm: t('common.actions.confirm_delete') }, 
            class: "bg-red-500 text-white px-3 py-2 rounded hover:bg-red-600" %>
      </div>
    </div>
  <% end %>
</div>
