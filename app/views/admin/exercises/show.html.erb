<div class="bg-indigo-400 text-white text-3xl font-bold pt-4 pb-16 px-8 flex items-center justify-between flex-col sm:flex-row">
  <div><%= t('.title', name: @exercise.name) %></div>
  <div><%= link_to t("common.actions.back"), 'javascript:history.back()', class: "btn-fancy-white text-base sm:text-sm mt-4 sm:mt-0" %></div>
</div>
<div class="bg-indigo-400 pt-4 pb-16 relative z-10"></div>
<div class="p-0 sm:p-6 -mt-24">
  <div class="bg-white shadow-md rounded-none sm:rounded-lg p-4 sm:p-8 min-h-[300px] border border-gray-200 relative z-10 w-full">

    <!-- Content -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
      <!-- Left Panel (Description) -->
      <div class="space-y-4 border-gray-200 shadow-md rounded-lg px-4 py-6">
        <div>
          <h2 class="text-lg font-semibold text-gray-700"><%= t('.fields.name') %>:</h2>
          <p class="text-gray-600 text-base mt-2"><%= @exercise.name %></p>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-700"><%= t('.fields.description') %>:</h2>
          <p class="text-gray-600 text-base mt-2"><%= @exercise.description %></p>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-700"><%= t('.fields.set') %>:</h2>
          <p class="text-gray-600 text-base mt-2"><%= @exercise.set %></p>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-700"><%= t('.fields.repetition') %>:</h2>
          <p class="text-gray-600 text-base mt-2"><%= @exercise.repetition %></p>
        </div>
      </div>

      <!-- Middle Panel (Images) -->
      <% if @exercise.images.attached? %>
        <div class="md:col-span-2 border-gray-200 shadow-md rounded-lg px-4 py-6">
          <h2 class="text-2xl font-semibold text-gray-700"><%= t('.fields.images') %>:</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
            <% @exercise.images.each do |image| %>
              <%= image_tag(image, class: "w-64 h-64 object-cover rounded-lg shadow-sm") %>
            <% end %>
          </div>
        </div>
      <% end %>


      <!-- Right Panel (Video) -->
      <% if @exercise.video_url.present? && @exercise.youtube_embed_url.present? %>
        <div class="md:col-span-2 border-gray-200 shadow-md rounded-lg px-4 py-6">
          <h2 class="text-2xl font-semibold text-gray-700"><%= t('.fields.video') %>:</h2>
          <iframe width="100%" height="315"
                    src="<%= @exercise.youtube_embed_url %>"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
          </iframe>
        </div>
      <% end %>
    
    </div>

  </div>
</div>
