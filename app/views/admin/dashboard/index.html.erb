<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<h1>Vitajte!</h1>
<% if user_signed_in? %>
  <p>Ste prihlásený ako <%= current_user.email %> (role: <%= current_user.role %>)</p>
  <%= button_to "Odhlásiť sa", destroy_user_session_path, method: :delete %>
<% else %>
  <p>
    <%= link_to "Prihlásiť sa", new_user_session_path %> alebo
    <%= link_to "Registrovať sa", new_user_registration_path %>
  </p>
<% end %>


<section id="welcome" class="flex flex-col-reverse sm:flex-row p-6 items-center gap-8 mb-12 scroll-mt-40">
  <article class="sm:w-1/2">
    <h2 class="max-w-md text-4xl font-bold text-center sm:text-5xl sm:text-left text-slate-900"><%= t('.welcome', name: "current_user.name") %></h2>
      <p class="max-w-md text-2xl mt-4 text-center sm:text-left text-slate-600"><%= t('.description') %></p>
    </article>
  <%= image_tag("fyzio1.jpg", alt: "Physiotherapist", class: "w-1/2 sm:w-1/3") %>
</section>

<hr class="mx-auto bg-black w-1/2">

<div class="grid grid-cols-3 gap-6 mb-10 mt-10">
  <div class="p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-xl font-semibold"><%= t('.statistics.total_exercises') %></h2>
    <p class="text-3xl font-bold"><%= @total_exercises %></p>
    <%= link_to t(".statistics.new_exercise"), new_exercise_path, class: "relative px-6 py-3 font-semibold text-black uppercase border-2 border-black rounded shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-none hover:border-black hover:text-[#955fc5] transition-all mt-4 inline-block" %>
  </div>

  <div class="p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-xl font-semibold"><%= t('.statistics.total_plans') %></h2>
    <p class="text-3xl font-bold"><%= @total_plans %></p>
    <%= link_to t(".statistics.new_plan"), new_plan_path, class: "relative px-6 py-3 font-semibold text-black uppercase border-2 border-black rounded shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-none hover:border-black hover:text-[#955fc5] transition-all mt-4 inline-block" %>
  </div>
    
  <div class="p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-xl font-semibold"><%= t('.statistics.total_clients') %></h2>
    <p class="text-3xl font-bold">*5</p> <!-- Hardcoded hodnota -->
    <a href="#" class="relative px-6 py-3 font-semibold text-black uppercase border-2 border-black rounded shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-none hover:border-black hover:text-[#955fc5] transition-all mt-4 inline-block"><%= t('.statistics.new_client') %></a>
  </div>
</div>

<hr class="mx-auto w-1/2">
