<% if user_signed_in? %>
  <p><%= current_user.email %> (<%= current_user.role %>)</p>
<% end %>

<section id="welcome" class="flex flex-col-reverse sm:flex-row p-6 items-center gap-6 sm:gap-8 mb-12 scroll-mt-40">
  <article class="sm:w-1/2 text-center sm:text-left">
    <h2 class="max-w-md text-3xl sm:text-5xl font-bold text-slate-900"><%= t('.welcome', name: current_user.name) %></h2>
    <p class="max-w-md text-xl sm:text-2xl mt-4 text-slate-600"><%= t('.description') %></p>
  </article>
  <%= image_tag("fyzio1.jpg", alt: "Physiotherapist", class: "w-2/3 sm:w-1/3") %>
</section>

<hr class="mx-auto bg-black w-3/4 sm:w-1/2">

<div class="grid grid-cols-1 md:grid-cols-3 sm:grid-cols-2 gap-4 sm:gap-6 mb-10 mt-10">
  <div class="p-6 bg-white shadow-md rounded-lg text-center sm:text-left">
    <h2 class="text-lg sm:text-xl font-semibold"><%= t('.statistics.total_exercises') %></h2>
    <p class="text-2xl sm:text-3xl font-bold"><%= @total_exercises %></p>
    <%= link_to t(".statistics.new_exercise"), new_admin_exercise_path, class: "btn-fancy mt-2" %>
  </div>

  <div class="p-6 bg-white shadow-md rounded-lg text-center sm:text-left">
    <h2 class="text-lg sm:text-xl font-semibold"><%= t('.statistics.total_plans') %></h2>
    <p class="text-2xl sm:text-3xl font-bold"><%= @total_plans %></p>
    <%= link_to t(".statistics.new_plan"), new_admin_plan_path, class: "btn-fancy mt-2" %>
  </div>
    
  <div class="p-6 bg-white shadow-md rounded-lg text-center sm:text-left">
    <h2 class="text-lg sm:text-xl font-semibold"><%= t('.statistics.total_clients') %></h2>
    <p class="text-2xl sm:text-3xl font-bold"><%= @total_clients %></p>
    <%= link_to t('.statistics.new_client'), new_admin_user_path, class: "btn-fancy mt-2" %>
  </div>
</div>

<hr class="mx-auto w-3/4 sm:w-1/2">
