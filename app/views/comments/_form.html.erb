<%= form_with(model: [user_plan, user_plan.comments.build], html: { class: "mt-8 bg-white p-4 rounded-lg shadow" }) do |f| %>
  <h3 class="text-lg font-semibold mb-2"><%= t('comments.form.add_comment') %></h3>

  <div class="mb-4">
    <%= f.rich_text_area(:body, class: "w-full min-h-[150px] px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", required: true) %>
  </div>


  <div class="mb-4">
<%= f.submit(t('comments.form.reply'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out transform hover:scale-105 active:scale-95") %>  </div>

<% end %>
