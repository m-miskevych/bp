<div class="container mx-auto px-4 py-6 max-w-md">
  <h2 class="text-2xl font-bold mb-6 text-center"><%= t("devise.invitations.edit.header") %></h2>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "bg-white p-6 rounded-lg shadow-md" }) do |f| %>
    
    <%= f.hidden_field :invitation_token, readonly: true %>

    <% if f.object.class.require_password_on_accepting %>
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.password_field :password, class: "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, class: "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300" %>
    </div>
  <% end %>
</div>