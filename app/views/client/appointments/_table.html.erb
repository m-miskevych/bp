<table class="min-w-full bg-white border border-gray-200 shadow-md rounded-lg overflow-hidden mb-6">
  <thead class="bg-gray-100 border-b border-gray-200">
    <tr>
      <th class="text-left px-6 py-3">Session</th>
      <th class="text-left px-6 py-3">Date & Time</th>
      <th class="text-left px-6 py-3">Location</th>
      <th class="text-left px-6 py-3">Status</th>
      <th class="text-left px-6 py-3">Notes</th>
      <th class="text-left px-6 py-3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% appointments.each do |appointment| %>
      <tr class="border-b hover:bg-gray-50">
        <td class="px-6 py-4"><%= appointment.session_slot.name %></td>
        <td class="px-6 py-4"><%= l(appointment.start_at, format: :long) %></td>
        <td class="px-6 py-4"><%= appointment.session_slot.location %></td>
        <td class="px-6 py-4 capitalize"><%= appointment.status %></td>
        <td class="px-6 py-4"><%= truncate(appointment.notes, length: 50) %></td>
        <td class="px-6 py-4">
          <% if appointment.start_at.future? %>
            <%= button_to "Cancel", client_appointment_path(appointment), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 underline" %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
