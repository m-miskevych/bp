<div class="bg-indigo-400 text-white text-3xl font-bold pt-4 pb-16 px-8 flex items-center justify-between flex-col sm:flex-row">
  <div><%= t('.title') %></div>
  <div></div>
</div>
<div class="bg-indigo-400 pt-4 pb-16 relative z-10"></div>
<div class="p-0 sm:p-6 -mt-24">
  <div class="bg-white shadow-md rounded-none sm:rounded-lg p-4 sm:p-8 min-h-[300px] border border-gray-200 relative z-10 w-full">

    <% if @session_slots.any? %>

      <div class="relative flex flex-col w-full h-full text-gray-700 bg-white shadow-sm rounded-xl bg-clip-border">
        <div class="p-6 px-0 overflow-scroll">
          <table class="w-full text-left table-auto min-w-max">
            <thead>
              <tr>
                <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
                  <p class="block font-sans text-sm font-normal text-blue-gray-900 opacity-70"><%= t(".table.headers.name") %></p>
                </th>
                <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
                  <p class="block font-sans text-sm font-normal text-blue-gray-900 opacity-70">üìç</p>
                </th>
                <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
                  <p class="block font-sans text-sm font-normal text-blue-gray-900 opacity-70">üïí</p>
                </th>
                <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
                  <p class="block font-sans text-sm font-normal text-blue-gray-900 opacity-70">‚è≥</p>
                </th>
                <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
                  <p class="hidden lg:flex font-sans text-sm font-normal text-blue-gray-900 opacity-70">üí¨</p>
                </th>
                <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
                  <p class="block font-sans text-sm font-normal text-blue-gray-900 opacity-70"></p>
                </th>
              </tr>
            </thead>

            <tbody>
              <% @session_slots.each do |slot| %>
                <tr class="hover:bg-slate-50 transition text-xs sm:text-sm lg:text-base">
                  <td class="p-4 border-b border-blue-gray-50"><%= slot.name %></td>
                  <td class="p-4 border-b border-blue-gray-50"><%= slot.location %></td>
                  <td class="p-4 border-b border-blue-gray-50"><%= l(slot.available_at, format: :short) %></td>
                  <td class="p-4 border-b border-blue-gray-50"><%= slot.duration %> min</td>
                  <td class="p-4 border-b border-blue-gray-50">
                    <p class="hidden lg:flex"><%= truncate(slot.description, length: 60) %></p>
                  </td>
                  <td class="p-4 border-b border-blue-gray-50">
                    <%= link_to t(".book"), new_client_appointment_path(session_slot_id: slot.id),
                          class: "inline-block bg-blue-100 text-blue-700 text-xs sm:text-sm font-medium px-3 py-1 rounded hover:bg-blue-200 transition" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>


    <% else %>
      <div class="text-center text-slate-500 py-20 text-lg">
        <%= t(".no_slots") %>
      </div>
    <% end %>

  </div>
</div>





